<%= panel_tag 'yes' %>
<%= form_for @user, url: admin_account_path, html: {method: :put, class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :name, '用户名', class: 'col-md-2 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :name, class: 'form-control', disabled: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :role, '角色', class: 'col-md-2 control-label' %>
      <div class="col-sm-8">
        <%= f.select :role_ids, Role.all.map { |role| [role.name,role.id] },{}, multiple: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit '确定', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
<% end %>
