<%= panel_tag 'yes' %>
<%= title_tag '角色管理' %>
<%= form_for [:admin,@role], html: { class: 'form-inline' } do |f| %>
  <div class="form-group">
    <%= f.text_field :code, class: 'form-control', placeholder: '角色代码' %>
    <%= f.text_field :name, class: 'form-control', placeholder: '角色名称' %>
    <%= f.button '确定', class: 'btn btn-primary' %>
  </div>
<% end %>
<br>
<div class="table-responsive">
  <table class="table">
    <thead>
    <tr>
      <th>角色代码</th>
      <th>角色名称</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @roles.each do |role| %>
        <tr>
          <td><%= role.code %></td>
          <td><%= role.name %></td>
          <td>
            <%= link_to edit_admin_role_path(role) do %>
                <i class="fa fa-edit"></i>编辑
            <% end %>
            <%= link_to admin_role_path(role), method: :delete, data: { confirm: '确定要删除此记录吗？' } do %>
                <i class="fa fa-trash"></i>删除
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
