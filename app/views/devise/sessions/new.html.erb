<%= title_tag '登录' %>
  <div class="col-md-5 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">登录</div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal', autocomplete: "off") do |f| %>
          <div class="form-group">
            <%= f.text_field :login, class: 'form-control', placeholder: '用户名或邮箱' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: '密码' %>
          </div>
          <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label '记住登录状态(60天)' %>
                <div class="pull-right">
                  <%= link_to "忘记了密码?", new_password_path(resource_name) %>
                </div>
              </div>
          <% end -%>
          <div class="form-actions">
            <%= f.submit '登录', class: 'btn btn-block btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
