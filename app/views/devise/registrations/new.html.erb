<%= title_tag '注册' %>
<div class="col-md-5 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">注册</div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
        <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: '用户名' %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: '邮箱' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: '密码' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: '确认密码' %>
          </div>
          <div class="form-group">
            <div class="col-md-6" style="margin-left: -14px;">
              <%= rucaptcha_input_tag class: 'form-control', placeholder: '验证码' %>
            </div>
            <div class="col-md-6">
              <%= rucaptcha_image_tag alt: '验证码，点击刷新', class: 'captcha' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit '确定', class: 'btn btn-block btn-primary' %>
          </div>
      <% end %>
    </div>
  </div>
</div>

