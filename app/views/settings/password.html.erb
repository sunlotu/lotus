<div class="col-md-3">
  <%= render 'menu' %>
</div>
<div class="col-md-9">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= form_for @user, url: setting_path, html: {method: :put, class: 'form-horizontal' } do |f| %>
        <%= hidden_field_tag :type, 'password' %>
        <div class="form-group">
          <%= f.label :current_password, '当前密码', class: 'col-md-2 control-label' %>
          <div class="col-sm-8">
            <%= f.password_field :current_password, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, '密码', class: 'col-md-2 control-label' %>
          <div class="col-sm-8">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, '确认密码', class: 'col-md-2 control-label' %>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.submit '确定', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
